{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "App - Debug - Generate",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_INSTALL_PREFIX:PATH=${workspaceFolder}/install/Debug",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-B",
                "${workspaceRoot}/build/Debug",
                "${workspaceRoot}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "CXX": "g++-10"
                }
            },
        },
        {
            "label": "App - Debug - Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build/Debug",
                "--target",
                "install"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "CXX": "g++-10"
                }
            },
        },
        {
            "label": "App - Debug - Run",
            "type": "shell",
            "command": "./bin/cute_solar_system",
            "args": [],
            "options": {
                "cwd": "install/Debug/",
                "env": {
                    "CXX": "g++-10"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "App - Release - Generate",
