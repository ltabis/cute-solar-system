            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "CXX": "g++-10"
                }
            },
        },
        {
            "label": "App - Release - Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceRoot}/build/Release",
                "--target",
                "install"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "CXX": "g++-10"
                }
            },
        },
        {
            "label": "App - Release - Run",
            "type": "shell",
